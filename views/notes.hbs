<body>

    <div class="container">
        <div class="header">
            <h3>Notes Management System</h3>
        </div>
        <div class="box">
            <h1 id="display"></h1>
            <form action="/notes" method="POST">
                <input type="text" name="notes" id="notes_value" placeholder="enter new  note">
                <input type="submit" value="create">
            </form>
        </div>

        <div class="page-body">

            <div class="notes" id="notes">
                {{!-- All notes goes here --}}
            </div>

        </div>

    </div>

</body>

<script>
    console.log("hello")
    $.ajax({
        url: "/get_notes",
        method: "GET",
        success: function (result) {
            console.log("hurre", result)

            var str = '';




            for (var i = 0; i < result.length; i++) {
                str += '<div class="note"><div class="card">'
                    + '    <div class="card-body">'
                    + '        <h5 class="card-title">' + result[i].note + '</h5>'
                    + '        <p class="card-text">' + result[i].desc + '</p>'
                    + '    </div>'
                    + '</div></div>'

            }

            console.log(str)
            console.log(result)

            $("#notes").append(str);
        }
    });

</script>

